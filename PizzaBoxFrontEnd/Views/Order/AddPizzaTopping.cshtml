@model PizzaBox.Domain.Entities.PizzaTopping
@{
    ViewData["Title"] = "Update Pizza";
}

<div class="text-center">
    <h1 class="display-4">Add Pizza Toppings</h1>
    <form asp-action="AddPizzaTopping">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.PizzaId)

        <div class="form-group">
            <label>
                Topping
            </label>
            <select asp-for="ToppingId" asp-items="@ViewBag.toppings">
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Select" class="btn btn-primary" />
        </div>
    </form>
</div>
