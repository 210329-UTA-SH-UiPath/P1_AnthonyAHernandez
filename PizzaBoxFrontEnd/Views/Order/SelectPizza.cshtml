@model AddPizzaViewModel
@{
    ViewData["Title"] = "Select Pizza";
}

<div class="text-center">
    <h1 class="display-4">Add Pizza</h1>
    <form asp-action="SelectPizza">
        @Html.HiddenFor(m=>m.OrderId)
        <div class="form-group">
            <label>
                Pizza
            </label>
            <select asp-for="PizzaIndex" asp-items="@ViewBag.Pizzas">
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Select" class="btn btn-primary" />
        </div>
    </form>



</div>
